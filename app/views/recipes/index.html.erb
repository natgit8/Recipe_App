<div class="container">
  <div class="row">

    <% @recipes.each do |recipe| %>
    <div class="col-md-3 col-sm-6">
      <div class="icon">
        <div class="image_wrapper">
          <%= link_to image_tag(recipe.image.url(:medium), class: "img-responsive aspect"), recipe %>
        </div>
        <div class="caption">
          <h3><%= recipe.name %></h3>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
