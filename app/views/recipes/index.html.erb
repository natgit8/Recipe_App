<div class="index-container">
  <div class="row">
    <h1><strong>All Recipes: </strong></h1>
    <span class="recipes"><% @recipes.each do |recipe| %></span>
    <div class="col-md-3 col-sm-6">
      <div class="icon">
        <div class="image_wrapper">
          <%= link_to image_tag(recipe.image.url(:medium), class: "img-responsive aspect"), recipe %>
        </div>
        <div class="caption">
          <h3><%= recipe.name %></h3>
        </div>
        <%= link_to recipe_favorites_path(recipe_id: recipe.id, user_id: current_user), method: :post, class: "btn btn-default" do %>
        <i class="glyphicon glyphicon-heart"></i>
        <% end %>
        <p>Favorites:
          <%= recipe.favorites.count %></p>
      </div>
    </div>
    <% end %>
  </div>
</div>
</div>
</div>
