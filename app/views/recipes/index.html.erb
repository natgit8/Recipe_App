<div class="container">
  <div class="row">

    <% @recipes.each do |recipe| %>
    <div class="col-md-3 col-sm-6">
      <div class="icon">
        <div class="image_wrapper">
          <%= link_to image_tag(recipe.image.url(:medium), class: "img-responsive aspect"), recipe %>
        </div>
        <div class="caption">
          <h3><%= recipe.name %></h3>
        </div>
        <%= link_to "Favorite", recipe_favorites_path(recipe_id: recipe.id, user_id: current_user), method: :post %>
        <p>Favorites:
          <%= recipe.favorites.count %></p>
      </div>
    </div>
    <% end %>
  </div>
</div>
