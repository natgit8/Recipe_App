<div class="row" id="recipe_show">
  <div class="col-md-8 col-md-offset-2">
    <div class='panel panel-default'>
      <div class='panel-heading text'>
        <%= image_tag @recipe.image.url(:medium) %>
      </div>
      <div class="panel-body">
        <h1>
          <%= @recipe.name %>
        </h1>
        <p class="description">
          <%= @recipe.description %>
        </p>
        <p class="ingredients">
          <ol>
            <% @recipe.ingredients.each do |recipe_ingredient| %>
            <li><%= recipe_ingredient.name %></li>
            <% end %>
          </ol>
        </p>
        <h3>Directions:
        </h3>
        <ul>
          <li><%= @recipe.directions %></li>
        </ul>
      </div>

      <div class="panel-footer">
        <div class="row">
          <div class="col-md-6">
            <p class="user"></p>

          </div>
          <div class="col-md-6">
            <div class="btn-group pull-right">

              <%= link_to "Back", root_path, class: "btn btn-default" %>
              <%= link_to "Edit", edit_recipe_path, class: "btn btn-default" %>
              <%= link_to "Delete", recipe_path, method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-default" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="comments">
    <h2><%= @recipe.comments.count %>
      Comments</h2>
    <%= render @recipe.comments %>
  </br>
</div>

<div class="panel panel-default col-md-6 col-md-offset-3 ">
  <div class="panel-title text-left">
    <h3>Add a comment:</h3>
  </div>
  <div class="panel-body">
    <%= render partial: 'comments/form', locals: { comment: @comment } %>
  </div>
</div>
</div>
</div>
